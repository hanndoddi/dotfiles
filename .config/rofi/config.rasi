configuration {
  // Unbind the default conflicting actions
  kb-remove-to-eol:       "";
  kb-mode-complete:       "";
  kb-accept-entry:        "";  // Weâ€™ll rebind it just below

  // Remap navigation and enter
  kb-row-down:        "Down,Control+j";
